<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icon_bg"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <include layout="@layout/titlebusiness"></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y77"
        android:background="@mipmap/icon_editbg"
        android:gravity="center"
        android:text="输入数据"
        android:textColor="@color/color_fffffff"
        android:textSize="@dimen/y36" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y30"
        android:background="@mipmap/icon_shurubg"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.75"
                android:text="峰时度数："
                android:textColor="@color/color_fffffff"
                android:textSize="@dimen/y36" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etPeak"
                        android:layout_width="@dimen/y277"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="8"
                        android:text="50"
                        android:textColor="@color/color_fffffff"
                        android:textColorHint="@color/color_fffffff"
                        android:textSize="@dimen/y60" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:alpha="0.75"
                        android:gravity="right"
                        android:text="度"
                        android:textColor="@color/color_fffffff"
                        android:textSize="@dimen/y36" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/y340"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_edline" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.75"
                android:text="谷时度数："
                android:textColor="@color/color_fffffff"
                android:textSize="@dimen/y36" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false">

                    <EditText
                        android:id="@+id/etValley"
                        android:layout_width="@dimen/y277"
                        android:layout_height="@dimen/y100"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="8"
                        android:text="100"
                        android:textColor="@color/color_fffffff"
                        android:textColorHint="@color/color_fffffff"
                        android:textSize="@dimen/y60" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:alpha="0.75"
                        android:gravity="right"
                        android:text="度"
                        android:textColor="@color/color_fffffff"
                        android:textSize="@dimen/y36" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/y340"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_edline" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y40"
        android:gravity="center">

        <Button
            android:id="@+id/btnCalculation"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y75"
            android:background="@mipmap/icon_button"
            android:text="计算"
            android:textColor="#1f1e24"
            android:textSize="@dimen/y38" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y75"
            android:layout_marginLeft="@dimen/y30"
            android:background="@mipmap/icon_button2"
            android:text="重置"
            android:textColor="@color/color_fffffff"
            android:textSize="@dimen/y38" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y77"
        android:background="@mipmap/icon_editbg"
        android:gravity="center"
        android:text="计算结果"
        android:textColor="@color/color_fffffff"
        android:textSize="@dimen/y36" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y730"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y30"
        android:background="@mipmap/icon_shuchubg"
        android:gravity="left|center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y100"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.75"
                android:text="合计度数："
                android:textColor="@color/color_fffffff"
                android:textSize="@dimen/y36" />

            <TextView
                android:id="@+id/tvTotalDegress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="0"
                android:inputType="number"
                android:maxLength="8"
                android:text=""
                android:textColor="@color/color_fffffff"
                android:textColorHint="@color/color_fffffff"
                android:textSize="@dimen/y60" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y8"
                android:alpha="0.75"
                android:text="度"
                android:textColor="@color/color_fffffff"
                android:textSize="@dimen/y36" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y100"
            android:layout_marginTop="@dimen/y30"

            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.75"
                android:text="平价电费："
                android:textColor="@color/color_fffffff"
                android:textSize="@dimen/y36" />

            <TextView
                android:id="@+id/tvAverageDegress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="0"
                android:inputType="number"
                android:maxLength="8"
                android:textColor="@color/color_fffffff"
                android:textColorHint="@color/color_fffffff"
                android:textSize="@dimen/y60" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y8"
                android:alpha="0.75"
                android:text="元"
                android:textColor="@color/color_fffffff"
                android:textSize="@dimen/y36" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y100"
            android:layout_marginTop="@dimen/y30"

            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.75"
                android:text="峰时电费："
                android:textColor="@color/color_fffffff"
                android:textSize="@dimen/y36" />

            <TextView
                android:id="@+id/tvPeakPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="0"
                android:inputType="number"
                android:maxLength="8"
                android:textColor="@color/color_fffffff"
                android:textColorHint="@color/color_fffffff"
                android:textSize="@dimen/y60" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y8"
                android:alpha="0.75"
                android:text="元"
                android:textColor="@color/color_fffffff"
                android:textSize="@dimen/y36" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y100"
            android:layout_marginTop="@dimen/y30"

            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.75"
                android:text="谷时电费："
                android:textColor="@color/color_fffffff"
                android:textSize="@dimen/y36" />

            <TextView
                android:id="@+id/tvValleyPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="0"
                android:inputType="number"
                android:maxLength="8"
                android:textColor="@color/color_fffffff"
                android:textColorHint="@color/color_fffffff"
                android:textSize="@dimen/y60" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y8"
                android:text="元"
                android:textColor="@color/color_c8d0d0"
                android:textSize="@dimen/y36" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y100"
            android:layout_marginTop="@dimen/y30"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.75"
                android:text="峰谷合计电费："
                android:textColor="@color/color_fffffff"
                android:textSize="@dimen/y36" />

            <TextView
                android:id="@+id/tvPeakAndValleyPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="0"
                android:inputType="number"
                android:maxLength="8"
                android:textColor="@color/color_fffffff"
                android:textColorHint="@color/color_fffffff"
                android:textSize="@dimen/y60" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y8"
                android:alpha="0.75"
                android:text="元"
                android:textColor="@color/color_fffffff"
                android:textSize="@dimen/y36" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>